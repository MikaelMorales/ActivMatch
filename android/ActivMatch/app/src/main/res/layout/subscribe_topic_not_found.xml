<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topic_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No results found, please try later !"
        android:minLines="3"
        style="@style/ActivMatch.Subtitle"/>

    <Button
        android:id="@+id/topic_subscribe_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:elevation="3dp"
        android:text="@string/subscribe_anyway"
        android:backgroundTint="@color/light_gray"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textAppearance="@style/ActivMatch.Subtitle"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/rounded_button"/>
</LinearLayout>